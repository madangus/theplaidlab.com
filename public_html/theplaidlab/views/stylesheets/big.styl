/* Styles for laptop/desktop */

*[data-module="carousel"]

	*[data-control="navigate"]
		display inline-block
		height 450px
		vertical-align top
		width 3.571%

	*[data-control="navigate"][data-action="back"]
		background-color blue

	*[data-control="navigate"][data-action="forward"]
		background-color green

	*[data-control="stage"]
		display inline-block
		overflow hidden
		width 91.796%							/* 940/1024 */ 
		-webkit-backface-visibility: hidden;

	.itemsWrapper
		transition 0.5s all linear		
		width 500%								/* 4700/940 (Desired size is number of items * length of each item including margin) */
		-webkit-transform: translateZ(0);

	*[data-display-item]
		display inline-block
		margin 0 0.425%							/* 20/4700 */
		position relative
		vertical-align top
		width 19.148%							/* 900/4700  */		

	*[data-control="pager"]
		clear both
		

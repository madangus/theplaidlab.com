/* Styles for laptop/desktop */

*[data-module="slideshow"]
	opacity 1		

	.mobileNav
		display none

	.portfolioHeading,
	.desktopNav
		display inline-block

	.desktopNav
		text-align right	
		width 75%

	*[data-control="stage"]
		display inline-block
		margin-left 2.750em
		overflow hidden
		width 91.796%							/* 940/1024 */ 

	.itemsWrapper
		transition 0.5s all linear		
		width 500%								/* 4700/940 (Desired size is number of items * length of each item including margin) */

	*[data-display-item]
		display inline-block
		margin 0 0.425%							/* 20/4700 */
		vertical-align top
		width 19.148%							/* 900/4700  */		

	*[data-control="pager"]
		clear both
		

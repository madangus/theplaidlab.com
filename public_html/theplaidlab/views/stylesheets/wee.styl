/* Styles for mobile portrait
*		max-width 320px	
*		360/16
*/

@media screen and (max-width: 40em)
	.container
		width 99%

	.bio,
	.sidebar,
	.contentColumn,
	.contentCallout
		display block
		width 92%

	.sidebar
		margin-left 0
		width 90%

	.behindTheCurtain
		padding 1.362em 2.129%		

	.currentExperiments
		padding 1.362em 4%		
	
	.skillBucket
		margin-top 0

	*[data-module="slideshow"]
		overflow none
		width 95%

		[data-control="stage"],
		.itemsWrapper
			margin-left 0
			width 100%

		.portfolioHeading,
		.mobileNav
			display inline-block

		*[data-control="navigate"]
			display none
		
		.portfolioItem
			display block
			margin-left 0
			margin-right 0
			width 99%


